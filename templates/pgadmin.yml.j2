services:
  pgadmin:
    image: dpage/pgadmin4:9.4
    ports:
      - "5050:80"
    environment:
      PGADMIN_DEFAULT_EMAIL: {{ PGADMIN_DEFAULT_EMAIL }}
      PGADMIN_DEFAULT_PASSWORD: {{ PGADMIN_DEFAULT_PASSWORD }}
      PGADMIN_CONFIG_DATABASE_URI: postgresql://{{ POSTGRES_USER }}:{{ POSTGRES_PASSWORD }}@pgbouncer:6432/{{ POSTGRES_DB }}
    volumes:
      - /mnt/nfs/shared/pgadmin:/var/lib/pgadmin
    deploy:
      replicas: 1
      placement:
        constraints: [node.role == manager]
      restart_policy:
        condition: on-failure
    networks:
      - backend
      - proxy
    healthcheck:
      test: ["CMD", "wget", "-q", "--spider", "http://localhost:80/misc/ping"]
      interval: 30s
      timeout: 10s
      retries: 3

networks:
  backend:
    external: true
  proxy:
    external: true